<div class="divcontents">
    @foreach (var item in Model)
    {
    var divClass = "metro-tile " + " Org-" + item.OrganizationId + " metro-tile2 ";

        if (item.IsOwner)
        {
            divClass += " metro-design ";
        }
        else
        {
            divClass += " metro-collect ";
        }

        if (item.IsDraftMode)
        {

            divClass += " metro-staging";
        }
        else
        {
            divClass += " metro-prod";
        }
