    <iframe width="480" height="360" src="http://www.youtube.com/embed/BgTJnSKQKIs?rel=0" frameborder="0" allowfullscreen></iframe>


     </div>*@



@{if (ViewBag.Omniture.IsEnabled == true)
            {
                Html.RenderPartial("OmniturePartial");
            }
}
