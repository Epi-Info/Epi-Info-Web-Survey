@model Epi.Web.MVC.Models.PassCodeModel

@{
    ViewBag.Title = "Admin: Log In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="header"><h1>Epi Info Web Survey </h1></div>


<div id="content">

<p>Please enter the survey pass code provided along with the survey link to view your responses.</p>
<p>&nbsp;</p>
<p>&nbsp;</p>

<div class="Logsin">
  
<div class="LogHead"><h2 style="font-size: 18px; padding-bottom:6px;">Enter Pass Code </h2></div>   
<div class="logbody">  

@using (Html.BeginForm())
{
     @Html.AntiForgeryToken()  
    @Html.ValidationSummary(true)
    <p style="margin-bottom:2px; font-size:10pt; font-weight:bold;"><label for="Passcode">Pass Code:</label>
    
    
   @Html.PasswordFor(m => m.PassCode)
    
 <button style="margin-left:10px; width:50px;" type="submit" value="Log in" class="login">Go</button></p>
}
</div> 
</div>
</div>